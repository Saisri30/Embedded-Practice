{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build active C file (gcc)",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-Wall", "-Wextra", "-O2",
        "${file}",
        "-o", "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": "$gcc",
      "group": { "kind": "build", "isDefault": true }
    }
  ]
}
